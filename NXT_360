//360 = 2000
task main ()
{
 SetSensorLowspeed(IN_4);

 int array[20];
 int n=1;
 int minimum;
 int location = 1;
 int c;

 array[0] = SensorUS(IN_4);
 for(int i=0; i <= 19; i++)
 {
  RotateMotor(OUT_C, 50, 100);
  Wait(800);
  array[n] = SensorUS(IN_4);
  n++;
 }
  Off(OUT_C);

  minimum = array[0];
  
  for (c = 1; c < 20; c++)
  {
   if (array[c] < minimum)
   {
    minimum = array[c];
    location = c+1;
   }
  }
  Wait(2000);
  RotateMotor(OUT_C, 50, (location*100));
  
}
